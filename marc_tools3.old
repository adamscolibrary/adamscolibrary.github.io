          <i class="ph ph-list-dashes mr-2"></i> Bib Formats
        </button>
        <button onclick="app.switchTab('talpa')" class="nav-item w-full text-left px-3 py-2 rounded-md text-sm font-medium text-slate-600 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors" data-tab="talpa">
          <i class="ph ph-magic-wand mr-2"></i> Talpa AI
        </button>
        <button onclick="app.switchTab('marc-builder')" class="nav-item w-full text-left px-3 py-2 rounded-md text-sm font-medium text-slate-600 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors" data-tab="marc-builder">
          <i class="ph ph-wrench mr-2"></i> 650 Builder
        </button>
        <button onclick="app.switchTab('book-summary')" class="nav-item w-full text-left px-3 py-2 rounded-md text-sm font-medium text-slate-600 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors" data-tab="book-summary">
          <i class="ph ph-magnifying-glass mr-2"></i> 520 Search
        </button>
        <button onclick="app.switchTab('ocr-tool')" class="nav-item w-full text-left px-3 py-2 rounded-md text-sm font-medium text-slate-600 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors" data-tab="ocr-tool">
          <i class="ph ph-scan mr-2"></i> OCR Tool
        </button>
        
        <div class="border-t border-slate-100 dark:border-slate-700 my-2 pt-2">
          <p class="px-3 text-xs font-semibold text-slate-400 dark:text-slate-500 uppercase tracking-wider mb-2">External Links</p>
          
          <!-- LOC Tools Accordion -->
          <div class="mb-1">
            <button onclick="app.toggleSidebarMenu('loc-menu', this)" class="w-full text-left px-3 py-2 rounded-md text-sm font-medium text-slate-600 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700 flex justify-between items-center transition-colors">
