  <!-- Application Logic -->
  <script>
    const app = {
      state: {
        ocrLoaded: false,
        ocrDictionary: null,
        isBulkMode: false
      },

      init() {
        // Event listeners for dropdowns
        document.addEventListener('click', (e) => {
          if (!e.target.closest('.dropdown-trigger')) {
            document.querySelectorAll('.dropdown-menu').forEach(el => el.classList.add('hidden'));
          }
        });

        // Initialize drag and drop for OCR
        const dropArea = document.getElementById('ocr-drop-area');
        const fileInput = document.getElementById('ocr-image-input');
        
        dropArea.addEventListener('click', () => fileInput.click());
        fileInput.addEventListener('change', this.handleImageUpload.bind(this));
        
        dropArea.addEventListener('dragover', (e) => { 
          e.preventDefault(); 
          if(document.documentElement.classList.contains('dark')) {
             dropArea.classList.add('border-blue-400', 'bg-slate-700');
          } else {
             dropArea.classList.add('border-blue-500', 'bg-blue-50'); 
          }
        });
        dropArea.addEventListener('dragleave', (e) => { 
          e.preventDefault(); 
          dropArea.classList.remove('border-blue-500', 'bg-blue-50', 'border-blue-400', 'bg-slate-700'); 
        });
        dropArea.addEventListener('drop', (e) => {
          e.preventDefault();
          dropArea.classList.remove('border-blue-500', 'bg-blue-50', 'border-blue-400', 'bg-slate-700');
          if(e.dataTransfer.files.length) {
            fileInput.files = e.dataTransfer.files;
            this.handleImageUpload();
          }
        });

        document.getElementById('ocr-convert-btn').addEventListener('click', this.runOCR.bind(this));
        
        // Initialize Dark Mode from Storage
        if (localStorage.getItem('theme') === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
          this.applyIframeFilters(true);
        } else {
          document.documentElement.classList.remove('dark');
          this.applyIframeFilters(false);
        }

        // --- Shortcuts (Global Listener) ---
        document.addEventListener('keydown', (e) => {
          // Ctrl+K: Focus LOC Search
          if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
            e.preventDefault();
            this.switchTab('marc-builder');
            document.getElementById('searchInput1').focus();
          }
          // Ctrl+C: Copy 650
          if ((e.ctrlKey || e.metaKey) && e.key === 'c') {
            // Only trigger if we are not selecting text
            if (!window.getSelection().toString()) {
               e.preventDefault();
               this.copyMARC();
            }
          }
          // Ctrl+J: Copy Juv
          if ((e.ctrlKey || e.metaKey) && e.key === 'j') {
            e.preventDefault();
            this.copyJuvMARC();
          }
          // Ctrl+X: Clear Builder
          if ((e.ctrlKey || e.metaKey) && e.key === 'x') {
            e.preventDefault();
            this.clearBuilder();
          }
        });

        // Add Enter Listener for ISBN fields (Single and Classify)
        document.getElementById('isbn').addEventListener('keydown', (e) => {
           if ((e.ctrlKey || e.metaKey) && e.key === 'Enter') {
             this.fetchSummary();
           }
        });
        document.getElementById('classify-isbn').addEventListener('keydown', (e) => {
           if (e.key === 'Enter') this.fetchClassify();
        });


        document.getElementById('app-status').textContent = "Ready";
      },

      // --- Dark Mode Logic ---
      toggleDarkMode() {
        const isDark = document.documentElement.classList.toggle('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
        this.applyIframeFilters(isDark);
      },

      applyIframeFilters(isDark) {
        const iframes = document.querySelectorAll('iframe');
        iframes.forEach(iframe => {
          if (isDark) {
            iframe.classList.add('dark-iframe-filter');
          } else {
            iframe.classList.remove('dark-iframe-filter');
          }
        });
      },

      // --- Navigation ---
      switchTab(tabId) {
        document.querySelectorAll('.tab-content').forEach(el => el.classList.add('hidden'));
        document.querySelectorAll('.nav-item').forEach(el => {
          el.classList.remove('bg-blue-50', 'text-blue-600', 'dark:bg-slate-700/50', 'dark:text-blue-400');
          el.classList.add('text-slate-600', 'dark:text-slate-300');
        });

        document.getElementById(tabId).classList.remove('hidden');
        const activeBtn = document.querySelector(`button[data-tab="${tabId}"]`);
        if(activeBtn) {
           activeBtn.classList.remove('text-slate-600', 'dark:text-slate-300');
           activeBtn.classList.add('bg-blue-50', 'text-blue-600', 'dark:bg-slate-700/50', 'dark:text-blue-400');
        }

        if (tabId === 'ocr-tool' && !this.state.ocrLoaded) {
          this.loadOCRLibs();
        }
      },

      // --- UI Utilities ---
      toggleSidebarMenu(menuId, btn) {
        const menu = document.getElementById(menuId);
        menu.classList.toggle('hidden');
        const icon = btn.querySelector('.ph-caret-down');
        if(menu.classList.contains('hidden')) {
           icon.style.transform = 'rotate(0deg)';
        } else {
           icon.style.transform = 'rotate(180deg)';
        }
      },

      toast(message, type = 'success') {
        const container = document.getElementById('toast-container');
        const el = document.createElement('div');
        const bg = type === 'error' ? 'bg-red-500' : 'bg-slate-800 dark:bg-slate-700';
        el.className = `${bg} text-white px-4 py-3 rounded shadow-lg flex items-center gap-2 transform transition-all duration-300 translate-y-10 opacity-0`;
        el.innerHTML = `
          <i class="ph ${type === 'error' ? 'ph-warning' : 'ph-check-circle'} text-lg"></i>
          <span class="text-sm font-medium">${message}</span>
        `;
        container.appendChild(el);
        
        requestAnimationFrame(() => {
          el.classList.remove('translate-y-10', 'opacity-0');
        });

        setTimeout(() => {
          el.classList.add('translate-y-10', 'opacity-0');
          setTimeout(() => el.remove(), 300);
        }, 3000);
      },

      toggleDropdown(index) {
        document.querySelectorAll('.dropdown-menu').forEach((el, i) => {
           if(i !== index) el.classList.add('hidden');
        });
        const menu = document.getElementById(`dropdown-menu-${index}`);
        menu.classList.toggle('hidden');
      },

      selectSeparator(index, value, e) {
        e.preventDefault();
        const btnText = document.getElementById(`sep-${index}`);
        btnText.textContent = value || "+";
        document.getElementById(`dropdown-menu-${index}`).classList.add('hidden');
      },

      // --- MARC Builder ---
      searchLOC() {
        const query = document.getElementById("searchInput1").value;
        if (!query) return;

        const resultsDiv = document.getElementById("results");
        resultsDiv.innerHTML = '<div class="text-center py-4"><div class="loader mx-auto"></div></div>';

        fetch(`https://id.loc.gov/authorities/subjects/suggest2/?q=${encodeURIComponent(query)}`)
          .then(res => res.json())
          .then(data => {
            resultsDiv.innerHTML = "";
            if(!data.hits || data.hits.length === 0) {
              resultsDiv.innerHTML = '<p class="text-slate-500 dark:text-slate-400 text-sm">No results found.</p>';
              return;
            }
            data.hits.forEach(hit => {
              const div = document.createElement("div");
              div.className = "flex justify-between items-center p-3 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors";
              
              const left = document.createElement('div');
              left.className = "flex-1 cursor-pointer font-medium text-slate-700 dark:text-slate-200";
              left.textContent = hit.suggestLabel;
              left.onclick = () => this.populateBuilder(hit.suggestLabel);
              
              const infoBtn = document.createElement('button');
              infoBtn.className = "text-blue-600 dark:text-blue-400 text-xs hover:underline ml-4";
              infoBtn.textContent = "Details";
              infoBtn.onclick = () => this.openInfoModal(hit);

              div.append(left, infoBtn);
              resultsDiv.appendChild(div);
            });
          })
          .catch(err => {
            console.error(err);
            resultsDiv.innerHTML = '<p class="text-red-500 text-sm">Error fetching results.</p>';
          });
      },

      populateBuilder(subject) {
        const parts = subject.split("--");
        document.getElementById("field1").value = parts[0] || "";
        document.getElementById("field2").value = parts[1] || "";
        document.getElementById("field3").value = parts[2] || "";
        document.getElementById("field4").value = parts[3] || "";
        this.toast("Builder populated");
      },

      clearBuilder() {
        ['field1', 'field2', 'field3', 'field4'].forEach(id => document.getElementById(id).value = '');
        ['sep-0', 'sep-1', 'sep-2'].forEach(id => document.getElementById(id).textContent = '+');
        this.toast("Builder cleared");
      },

      getBuilderString() {
        const f1 = document.getElementById("field1").value;
        const f2 = document.getElementById("field2").value;
        const f3 = document.getElementById("field3").value;
        const f4 = document.getElementById("field4").value;
        
        const s1 = document.getElementById("sep-0").textContent.includes("|") ? document.getElementById("sep-0").textContent : "";
        const s2 = document.getElementById("sep-1").textContent.includes("|") ? document.getElementById("sep-1").textContent : "";
        const s3 = document.getElementById("sep-2").textContent.includes("|") ? document.getElementById("sep-2").textContent : "";

        return `${f1}${s1}${f2}${s2}${f3}${s3}${f4}`.trim();
      },

      copyMARC() {
        const text = this.getBuilderString() + ".";
        navigator.clipboard.writeText(text);
        this.toast("Copied MARC string");
      },

      copyJuvMARC() {
        const text = this.getBuilderString() + "|vJuvenile literature.";
        navigator.clipboard.writeText(text);
        this.toast("Copied Juvenile MARC string");
      },

      openInfoModal(hit) {
        document.getElementById("modalTitle").innerText = hit.suggestLabel || "No Title";
        document.getElementById("modalScope").innerText = hit.more?.scopenote || "N/A";
        document.getElementById("modalBroader").innerText = hit.more?.broader || "N/A";
        document.getElementById("modalSource").innerText = hit.more?.source || "N/A";
        document.getElementById("modalType").innerText = hit.more?.rdftype || "N/A";
        document.getElementById("infoLink").href = hit.uri;
        document.getElementById("infoModal").style.display = "flex";
      },

      // --- Book Summary Logic ---
      toggleBulkMode() {
        this.state.isBulkMode = !this.state.isBulkMode;
        const modeText = document.getElementById('mode-text');
        const single = document.getElementById('summary-single-mode');
        const bulk = document.getElementById('summary-bulk-mode');

        if(this.state.isBulkMode) {
           modeText.textContent = "Single Mode";
           single.classList.add('hidden');
           bulk.classList.remove('hidden');
        } else {
           modeText.textContent = "Bulk Mode";
           single.classList.remove('hidden');
           bulk.classList.add('hidden');
        }
      },

      fetchSummary() {
        const isbn = document.getElementById("isbn").value.trim();
        if (!isbn) {
          this.toast("Please enter an ISBN", "error");
          return;
        }

        const btn = document.querySelector('#summary-single-mode button');
        const origText = btn.textContent;
        btn.textContent = "Searching...";
        btn.disabled = true;

        this.getGoogleBook(isbn)
          .then(text => {
             const container = document.getElementById("summary-result-container");
             const sumEl = document.getElementById("summary");
             sumEl.innerText = text || "No summary found for this ISBN.";
             container.classList.remove('hidden');
          })
          .catch(err => {
             this.toast("API Error", "error");
          })
          .finally(() => {
             btn.textContent = origText;
             btn.disabled = false;
          });
      },

      async getGoogleBook(isbn) {
         try {
           const res = await fetch(`https://www.googleapis.com/books/v1/volumes?q=isbn:${encodeURIComponent(isbn)}`);
           const data = await res.json();
           const book = data.items?.find(item =>
              item.volumeInfo.industryIdentifiers?.some(id => id.identifier === isbn)
           ) || data.items?.[0]; // Fallback to first result if strict match fails

           if (book && book.volumeInfo.description) {
               let summaryText = book.volumeInfo.description.trim();
               if (!summaryText.startsWith("\"")) summaryText = `"${summaryText}"`;
               summaryText = summaryText.replace(/--$/, "").trim() + " --Google Books";
               return summaryText;
           }
           return null;
         } catch(e) {
           console.error(e);
           return null;
         }
      },

      copySummary() {
        const text = document.getElementById("summary").innerText;
        navigator.clipboard.writeText(text);
        this.toast("Summary copied!");
      },

      // --- Bulk Operation ---
      async processBulkISBNs() {
         const input = document.getElementById('bulk-isbn-input').value;
         const isbns = input.split('\n').map(s => s.trim()).filter(s => s.length > 0);
         
         if(isbns.length === 0) {
            this.toast("No ISBNs found", "error");
            return;
         }

         const btn = document.getElementById('bulk-btn');
         const progress = document.getElementById('bulk-progress');
         const resultsArea = document.getElementById('bulk-results');
         const output = document.getElementById('bulk-output');
         
         btn.disabled = true;
         resultsArea.classList.remove('hidden');
         output.value = "";
         let resultsText = "";

         for (let i = 0; i < isbns.length; i++) {
            progress.textContent = `Processing ${i+1}/${isbns.length}...`;
            const isbn = isbns[i];
            
            // Smart rate limit: wait 500ms between calls
            await new Promise(r => setTimeout(r, 500));

            const summary = await this.getGoogleBook(isbn);
            if(summary) {
               resultsText += `ISBN: ${isbn}\n${summary}\n\n-------------------\n\n`;
            } else {
               resultsText += `ISBN: ${isbn}\n[No summary found]\n\n-------------------\n\n`;
            }
            output.value = resultsText;
            output.scrollTop = output.scrollHeight; // Auto scroll to bottom
         }

         progress.textContent = "Done!";
         btn.disabled = false;
         this.toast("Bulk processing complete");
      },

      copyBulkResults() {
         const output = document.getElementById('bulk-output');
         output.select();
         document.execCommand('copy');
         window.getSelection().removeAllRanges();
         this.toast("All results copied");
      },

      // --- OCLC Classify Logic ---
      fetchClassify() {
         const isbn = document.getElementById('classify-isbn').value.trim();
         if(!isbn) {
            this.toast("Please enter an ISBN", "error");
            return;
         }

         const btn = document.querySelector('#classify-result').previousElementSibling.querySelector('button');
         const resDiv = document.getElementById('classify-result');
         const origText = btn.textContent;
         
         btn.textContent = "Checking...";
         btn.disabled = true;
         resDiv.innerHTML = '<div class="loader"></div>';
         resDiv.classList.remove('hidden');

         // Note: OCLC Classify returns XML
         fetch(`http://classify.oclc.org/classify2/Classify?isbn=${encodeURIComponent(isbn)}&summary=true`)
            .then(response => {
               if(!response.ok) throw new Error("Network response was not ok");
               return response.text();
            })
            .then(str => {
               const parser = new DOMParser();
               const xml = parser.parseFromString(str, "application/xml");
               
               // Check for response code
               const response = xml.querySelector("response");
               const code = response ? response.getAttribute("code") : null;

               if(code === "0" || code === "2" || code === "4") { // 0=Success, 2=Single, 4=Multi
                  const work = xml.querySelector("work");
                  const title = work ? work.getAttribute("title") : "Unknown Title";
                  const author = work ? work.getAttribute("author") : "Unknown Author";
                  
                  // Get DDC (Dewey)
                  const ddcEl = xml.querySelector("ddc > mostPopular");
                  const ddc = ddcEl ? ddcEl.getAttribute("sfa") : "N/A";
                  
                  // Get LCC (Library of Congress)
                  const lccEl = xml.querySelector("lcc > mostPopular");
                  const lcc = lccEl ? lccEl.getAttribute("sfa") : "N/A";

                  resDiv.innerHTML = `
                     <div class="space-y-2">
                        <p class="font-bold text-slate-800 dark:text-slate-100">${title}</p>
                        <p class="text-sm text-slate-600 dark:text-slate-400 border-b border-slate-200 dark:border-slate-600 pb-2 mb-2">${author}</p>
                        <div class="grid grid-cols-2 gap-4">
                           <div class="bg-blue-50 dark:bg-slate-700 p-3 rounded">
                              <span class="block text-xs font-bold text-blue-600 dark:text-blue-400 uppercase">Dewey (DDC)</span>
                              <span class="font-mono text-lg text-slate-800 dark:text-white select-all">${ddc}</span>
                           </div>
                           <div class="bg-indigo-50 dark:bg-slate-700 p-3 rounded">
                              <span class="block text-xs font-bold text-indigo-600 dark:text-indigo-400 uppercase">LCC</span>
                              <span class="font-mono text-lg text-slate-800 dark:text-white select-all">${lcc}</span>
                           </div>
                        </div>
                     </div>
                  `;
               } else {
                  resDiv.innerHTML = `<p class="text-red-500 text-sm">OCLC Code ${code}: No classification found or invalid ISBN.</p>`;
               }
            })
            .catch(err => {
               console.error(err);
               // Handle CORS error specifically as it's common with OCLC from browser
               resDiv.innerHTML = `
                  <p class="text-red-500 text-sm font-bold">Connection Error</p>
                  <p class="text-slate-600 dark:text-slate-400 text-xs mt-1">
                     The browser blocked the request to OCLC (CORS). This is common when running locally or on some hosts. 
                     <br><br>
                     <a href="http://classify.oclc.org/classify2/Classify?isbn=${isbn}&summary=true" target="_blank" class="underline text-blue-500">Click here to view XML results directly</a>
                  </p>
               `;
            })
            .finally(() => {
               btn.textContent = origText;
               btn.disabled = false;
            });
      },

      // --- OCR Tool ---
      async loadOCRLibs() {
        const status = document.getElementById('ocr-status');
        status.textContent = "Loading OCR Engine...";
        
        try {
          if (!window.Tesseract) {
             await this.loadScript("https://cdn.jsdelivr.net/npm/tesseract.js@4/dist/tesseract.min.js");
          }
          if (!window.Typo) {
             await this.loadScript("https://cdn.jsdelivr.net/npm/typo-js@1.1.0/typo.min.js");
             const [aff, dic] = await Promise.all([
                fetch('https://raw.githubusercontent.com/cfinke/Typo.js/master/typo/dictionaries/en_US/en_US.aff').then(r => r.text()),
                fetch('https://raw.githubusercontent.com/cfinke/Typo.js/master/typo/dictionaries/en_US/en_US.dic').then(r => r.text())
             ]);
             this.state.ocrDictionary = new Typo("en_US", aff, dic);
          }
          
          this.state.ocrLoaded = true;
          status.textContent = "OCR Ready";
          setTimeout(() => status.textContent = "", 2000);
        } catch (e) {
          status.textContent = "Failed to load OCR libraries.";
          console.error(e);
        }
      },

      loadScript(src) {
        return new Promise((resolve, reject) => {
          const s = document.createElement('script');
          s.src = src;
          s.onload = resolve;
          s.onerror = reject;
          document.head.appendChild(s);
        });
      },

      handleImageUpload() {
        const file = document.getElementById('ocr-image-input').files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = (e) => {
            const img = document.getElementById('ocr-preview');
            img.src = e.target.result;
            img.classList.remove('hidden');
          };
          reader.readAsDataURL(file);
        }
      },

      async runOCR() {
        if(!this.state.ocrLoaded) {
           await this.loadOCRLibs();
        }

        const fileInput = document.getElementById('ocr-image-input');
        if (!fileInput.files.length) {
          this.toast("Please upload an image first", "error");
          return;
        }

        const btn = document.getElementById('ocr-convert-btn');
        const status = document.getElementById('ocr-status');
        const resultDiv = document.getElementById('ocr-result');
        const copyBtn = document.getElementById('ocr-copy-btn');

        btn.disabled = true;
        resultDiv.innerHTML = '<div class="flex items-center gap-2 text-slate-400"><div class="loader"></div> Processing image...</div>';

        try {
           const { data: { text } } = await Tesseract.recognize(
            fileInput.files[0],
            document.getElementById('ocr-lang-select').value,
            { logger: m => status.textContent = `Status: ${m.status} (${Math.round(m.progress * 100)}%)` }
           );
           
           // Process Text
           let processed = text.replace(/\n\s*\n/g, "||PARAGRAPH||").replace(/\n/g, " ").replace(/\|\|PARAGRAPH\|\|/g, "\n\n");
           
           if(this.state.ocrDictionary) {
             processed = processed.split(' ').map(word => {
               const cleanWord = word.replace(/[^a-zA-Z']/g, "");
               if(cleanWord && !this.state.ocrDictionary.check(cleanWord)) {
                 return `<span class="misspelled" title="Possible error">${word}</span>`;
               }
               return word;
             }).join(' ');
           }

           resultDiv.innerHTML = processed;
           copyBtn.classList.remove('hidden');
           status.textContent = "Done!";
           this.toast("Text extracted successfully");

        } catch (err) {
           resultDiv.textContent = "Error during OCR process.";
           console.error(err);
        } finally {
           btn.disabled = false;
        }
      },

      copyOCR() {
        const text = document.getElementById('ocr-result').innerText;
        const cit = document.getElementById('ocr-citation').value;
        const final = `"${text}" --${cit}`;
        navigator.clipboard.writeText(final);
        this.toast("Copied with citation");
      }
    };

    document.addEventListener('DOMContentLoaded', () => app.init());

  </script>
</body>
</html>
