  <div id="gtnModal" class="modal fixed inset-0 bg-black/60 hidden items-center justify-center z-50" onclick="if(event.target===this) this.style.display='none'">
    <div class="bg-white dark:bg-slate-800 w-[90vw] h-[90vh] rounded-xl overflow-hidden shadow-2xl relative transition-colors">
       <button onclick="document.getElementById('gtnModal').style.display='none'" class="absolute top-2 right-4 text-slate-500 hover:text-slate-800 z-10 bg-white/80 dark:bg-slate-800/80 dark:text-slate-200 rounded-full p-1"><i class="ph ph-x text-2xl"></i></button>
       <iframe src="https://www.getty.edu/research/tools/vocabularies/tgn/" class="w-full h-full border-none bg-white"></iframe>
